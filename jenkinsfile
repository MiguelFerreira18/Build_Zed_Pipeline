pipeline {
    agent any

    environment {
        branch = 'main'
        repo = 'https://github.com/zed-industries/zed.git'
    }

    stages {
        stage('Checkout') {
            steps{
                checkout scmGit(branches: [[name: "*/${branch}"]], extensions: [], userRemoteConfigs: [[url: "${repo}"]])
            }
        }
        stage('Check directory'){
            steps{
                bat 'dir'
            }
        }
        stage('Build Zed'){
            steps {
                dir ('./'){
                    bat 'cargo build --release'
                }
            }
        }
        stage('store artifact') {
            steps {
                archiveArtifacts artifacts: 'target/release/zed.exe', followSymlinks: false
            }
        }
        stage('Execute Zed executable') {
            steps {
                dir ('./') {
                     bat "target/release/zed.exe"
                }
            }
        }
    }

    post {
        failure {
            script {
                currentBuild.result = 'FAILURE'
                echo "Build failed"
            }
        }
        success {
            script {
                currentBuild.result = 'SUCCESS'
                echo "Build succeeded"
            }
        }
    }
}
